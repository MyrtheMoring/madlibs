<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textlist"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Choose yor story"
        android:textColor="#D77A61"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/stories"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/simple"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#223843"
            android:onClick="storyButton"
            android:text="Simple"
            android:textColor="#848587" />

        <Button
            android:id="@+id/tarzan"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#EFF1F3"
            android:onClick="storyButton"
            android:text="Tarzan" />

        <Button
            android:id="@+id/university"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#848587"
            android:onClick="storyButton"
            android:text="University"
            android:textColor="@android:color/background_dark" />

        <Button
            android:id="@+id/clothes"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#D8B4A0"
            android:onClick="storyButton"
            android:text="Clothes" />

        <Button
            android:id="@+id/dance"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#D77A61"
            android:onClick="storyButton"
            android:text="Dance" />
    </LinearLayout>

</LinearLayout>